<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light Themes -->
    <style name="DefaultLightGreenRedTheme" parent="android:Theme.Material.Light">
        <item name="android:colorAccent">@color/mat_red</item>
        <item name="android:actionBarStyle">@style/GreenActionBarStyle</item>
    </style>

    <style name="GreenActionBarStyle" parent="android:Widget.Material.ActionBar">
        <item name="android:background">@color/mat_green</item>
    </style>

    <style name="AlarmAlertFullScreenLightGreenRedTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorAccent">@color/mat_red</item>
    </style>

    <style name="TimePickerDialogFragmentLightGreenRed" parent="android:style/Theme.Material.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="timePickerDeleteButtonStyle">@style/LightTimePickerDeleteButtonStyle</item>
        <item name="android:colorAccent">@color/mat_red</item>
        <item name="android:actionBarStyle">@style/GreenActionBarStyle</item>
    </style>
</resources>